@model IEnumerable<Restaurant.web.Models.Orders>

@{
    ViewData["Title"] = "Index";
}
<head>
    <link rel="stylesheet" href="~/css/Index.css">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap_rest.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<body style="background-image:url(https://i.pinimg.com/originals/65/f7/66/65f766137dbbfa122d51e7a452d12b62.jpg);">

     <nav>
        <ul class="nav-flex-row">
            <li class="nav-item">
                 <a class="dropdown-item"
                <a class="nav-link text-dark" asp-area="" asp-page="/Index" style="color:#EC4E20">Home</a>
            </li>

            <li class="nav-item">
                <a class="dropdown-item"
                   asp-area="Food" asp-controller="FoodCategories" asp-action="Index" style="color:#EC4E20">
                    Category
                </a>
            </li>
            <li class="nav-item">
                <a class="dropdown-item"
                   asp-area="Food" asp-controller="Orders" asp-action="Index" style="color:#EC4E20">
                    Orders
                </a>
            </li>
            <li class="nav-item">
                <a class="dropdown-item"
                   asp-area="Food" asp-controller="Foodmenus" asp-action="Index" style="color:#EC4E20">
                    Menu
                </a>
            </li>
            <li class="nav-item">
                 <a class="dropdown-item"
                <a href="#shop" style="color:#EC4E20">Online Booking</a>
            </li>
        </ul>
    </nav><br <br/>
    <br/>
     <br/>

<h3>Orders</h3>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
       <tr style="background-color:#AC7088">
            <th>
                @Html.DisplayNameFor(model => model.OrderName)
            </th>
            <th>
                Customer Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Foodmenu)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.CustomerId)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr style="background-color:#F5E8C7">
            <td>
                @Html.DisplayFor(modelItem => item.OrderName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customers.CustomerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Foodmenu.FoodName)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.Customers.CustomerID)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.OrderId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.OrderId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.OrderId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>