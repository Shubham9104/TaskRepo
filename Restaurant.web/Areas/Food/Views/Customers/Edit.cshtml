@model Restaurant.web.Model.Customers

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Customers</h4>
<hr />
<div class="row">
    <div class="col-md-4" style="background-color:#CCD7C5">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CustomerID" />
            <div class="form-group"  style="background-color:#FFE6E8">
                <label asp-for="CustomerName" class="control-label"></label>
                <input asp-for="CustomerName" class="form-control" />
                <span asp-validation-for="CustomerName" class="text-danger"></span>
            </div>
            <div class="form-group"  style="background-color:#FFE6E8">
                <label asp-for="CustomerAddress" class="control-label"></label>
                <input asp-for="CustomerAddress" class="form-control" />
                <span asp-validation-for="CustomerAddress" class="text-danger"></span>
            </div>
            <div class="form-group"  style="background-color:#FFE6E8">
                <label asp-for="MobileNUmber" class="control-label"></label>
                <input asp-for="MobileNUmber" class="form-control" />
                <span asp-validation-for="MobileNUmber" class="text-danger"></span>
            </div>
            <div class="form-group"  style="background-color:#FFE6E8">
                <label asp-for="Eamil" class="control-label"></label>
                <input asp-for="Eamil" class="form-control" />
                <span asp-validation-for="Eamil" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" style="background-color:#FFE6E8" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
